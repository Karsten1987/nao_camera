
<launch>
  <env name="PYTHONPATH" value="$(env PYTHONPATH)" /> 

  <arg name="nao_ip" default="$(optenv NAO_IP 127.0.0.1)" />
  <arg name="nao_port" default="$(optenv NAO_PORT 9559)" />
  <arg name="source" default="2" /> <!-- depth camera -->
  <arg name="color" default="18" /> <!-- 9 = YUV422, 11 = RGB, 13 = BGR -->
  <node pkg="nao_camera" type="camera.py" name="nao_camera" required="true" args="--pip=$(arg nao_ip) --pport=$(arg nao_port)" output="screen">
     <param name="calibration_file_bottom" type="string" value="file://$(find nao_driver)/config/nao_bottom_640x480.yaml"/>
     <param name="calibration_file_top" type="string" value="file://$(find nao_driver)/config/nao_top_640x480.yaml"/>
     <param name="resolution" type="int" value="2" /> <!--QQVGA=0, QVGA=1, VGA=2 -->
     <param name="color_space" type="int" value="$(arg color)" /> <!-- 9 = YUV422, 11 = RGB, 13 = BGR -->
     <param name="fps" type="int" value="30" />
     <param name="camera_switch" type="int" value="2" /> --> <!-- 0 = top, 1 = bottom -->
     <param name="camera3d_frame" type="string" value="/DepthCamera_frame" />
     <param name="use_ros_time" type="bool" value="true" />
     <param name="source" type="int" value="$(arg source)" /> <!-- go for the depth camera-->
  </node>

</launch>
